generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Branch {
  id          String   @id @default(cuid())
  name        String
  address     String?
  isActive    Boolean  @default(true)
  users       User[]
  tables      Table[]
  orders      Order[]
  expenses    Expense[]
}

model User {
  id         String   @id @default(cuid())
  branchId   String?
  name       String?
  email      String   @unique
  password   String
  role       String   @default("CUSTOMER") // ADMIN, CHEF, CUSTOMER
  branch     Branch?  @relation(fields: [branchId], references: [id])
}

model Table {
  id             String           @id @default(cuid())
  branchId       String
  number         String
  status         String           @default("AVAILABLE") // AVAILABLE, OCCUPIED, NEED_HELP
  currentOrderId String?
  branch         Branch           @relation(fields: [branchId], references: [id])
  serviceRequests ServiceRequest[]
}

model Order {
  id          String      @id @default(cuid())
  branchId    String
  tableId     String
  status      String      @default("PENDING")
  totalAmount Decimal     @db.Decimal(10, 2)
  netAmount   Decimal     @db.Decimal(10, 2)
  branch      Branch      @relation(fields: [branchId], references: [id])
  items       OrderItem[]
  createdAt   DateTime    @default(now())
}

model OrderItem {
  id         String   @id @default(cuid())
  orderId    String
  menuItemId String
  quantity   Int
  unitPrice  Decimal  @db.Decimal(10, 2)
  orderedBy  String?
  status     String   @default("PENDING") // PENDING, SERVED
  order      Order    @relation(fields: [orderId], references: [id])
}

model ServiceRequest {
  id        String   @id @default(cuid())
  tableId   String
  type      String   // UTENSILS, SEASONING, REFILL, OTHER
  status    String   @default("PENDING")
  table     Table    @relation(fields: [tableId], references: [id])
  createdAt DateTime @default(now())
}

model Expense {
  id          String   @id @default(cuid())
  branchId    String
  amount      Decimal  @db.Decimal(10, 2)
  type        String   // INGREDIENTS, SALARY, WATER, ELECTRICITY
  date        DateTime @default(now())
  branch      Branch   @relation(fields: [branchId], references: [id])
}